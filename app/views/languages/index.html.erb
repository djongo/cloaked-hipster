<h1>Listing Languages</h1>

<table id="master_data" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @languages.each do |language| %>
  <tr>
    <td><%= language.name %></td>
    <td><%= link_to 'Edit', edit_language_path(language) %></td>
    <td><%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

