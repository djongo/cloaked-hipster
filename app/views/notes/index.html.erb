<h1>Listing Notes</h1>

<table id="master_data" class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Content</th>
    <th>State</th>
    <th>Publication</th>
    <th>User</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.content %></td>
    <td><%= note.state %></td>
    <td><%= note.publication_id %></td>
    <td><%= note.user_id %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Note', new_note_path %>
