<%= simple_form_for(@email, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :trigger, :disabled => true %>
    <%= f.input :subject %>
  <table>
    <tr>
      <td valign="top">
        <%= f.input :content, as: :text, :input_html => {:rows => 10, :cols => 65 } %>
      </td>
      <td valign="top" style="padding: 0px 5px;">
      <strong>You can use the following parameters in the email text:</strong><br /><br />
        <table>
          <tr><td>[title]</td><td>the publications title</td></tr>
          <tr><td>[id]</td><td>the publications id</td></tr>
          <tr><td>[created]</td><td>when the publication was craeted</td></tr>
          <tr><td>[update]</td><td>when the publication was last updated</td></tr>
          <tr><td>[name]</td><td>the HSBC responsible author's full name</td></tr>
          <tr><td>[email]</td><td>the HSBC responsible author's email address</td></tr>
        </table>
      </td>
    </tr>
  </table>    
    <%= f.input :delay %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>
